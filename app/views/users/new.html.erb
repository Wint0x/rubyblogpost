<section class="vh-100" style="background-color: #eee;">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>

                <%= form_with model: @user, url: users_path, class: "mx-1 mx-md-4" do |f| %>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                    <div data-mdb-input-init class="form-outline flex-fill mb-0">
                      <%= f.label :username, class: "form-label", for:"form3Example1c" %></label>
                      <%= f.text_field :username, id:"form3Example1c", class:"form-control", :required => true  %>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                    <div data-mdb-input-init class="form-outline flex-fill mb-0">
                      <%= f.label :email, class:"form-label", for:"form3Example3c"%></label>
                      <%= f.email_field :email, id:"form3Example3c", class:"form-control", :required => true  %>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                    <div data-mdb-input-init class="form-outline flex-fill mb-0">
                      <%= f.label :password, class:"form-label", for:"form3Example4c"%></label>
                      <%= f.password_field :password, id:"form3Example4c", class:"form-control", :required => true %>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                    <div data-mdb-input-init class="form-outline flex-fill mb-0">
                      <%= f.label :password_confirmation, class:"form-label", for:"form3Example4cd"%></label>
                      <%= f.password_field :password_confirmation, id:"form3Example4cd", class:"form-control", :required => true %>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                    <div data-mdb-input-init class="form-outline flex-fill mb-0">
                      <%= f.label :location, class:"form-label", for:"form3Example4cf" %>
                      <%= f.text_field :location, id:"form3Example4cf", class:"form-control",
                      :required => true %>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                    <div data-mdb-input-init class="form-outline flex-fill mb-0">
                      <%= f.label :bio, class:"form-label", for:"form3Example4ce" %>
                      <%= f.text_area :bio, id:"form3Example4ce", class:"form-control" %>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                    <div data-mdb-input-init class="form-outline flex-fill mb-0">
                      <%= f.file_field :profile_picture %>
                    </div>
                  </div>

                  <div class="form-check d-flex justify-content-center mb-5">
                    <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3c" required/>
                    <label class="form-check-label" for="form2Example3">
                      I agree all statements in <a href="#!">Terms of service</a>
                    </label>
                  </div>

                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <%= f.submit "Register", class:"btn btn-primary btn-lg" %>
                  </div>

                <% end %>

              </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                <%= image_tag("logo.png", :alt => "rubyblogpost_logo") %>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>